<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom" >

    <RelativeLayout
        android:id="@+id/image_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.gloria.offlineexperiments.ZoomableImageView
            android:id="@+id/zoomable_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="@drawable/tiled_bg"
            android:clickable="true"
            android:scaleType="matrix" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/groupControls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/rounded_background_lower_right_corner"
        android:orientation="vertical"
        android:padding="@dimen/standard_padding" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="Group\nsunspots"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="13sp" />

        <net.simonvt.numberpicker.NumberPicker
            android:id="@+id/sunspotsNumberPicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

        </net.simonvt.numberpicker.NumberPicker>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/wolfNumberText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/btn_margin"
            android:layout_marginTop="@dimen/btn_margin"
            android:background="@color/black"
            android:text="@string/wolfText"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/dateDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/btn_margin"
            android:background="@color/black"
            android:text="@string/defaultDate"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="top|center_horizontal"
        android:onClick="nextImage"
        android:orientation="vertical" >

        <Button
            android:id="@+id/next_btn"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/btn_margin"
            android:layout_marginRight="@dimen/btn_margin"
            android:layout_marginTop="@dimen/btn_margin"
            android:background="@drawable/next_button"
            android:onClick="nextImage" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/btn_margin"
            android:layout_marginRight="@dimen/btn_margin"
            android:background="@color/black"
            android:text="@string/nextBtn"
            android:textAppearance="?android:attr/textAppearance"
            android:textColor="@color/white" />
    </LinearLayout>

</RelativeLayout>