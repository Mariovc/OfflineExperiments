<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/image_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <com.gloria.offlineexperiments.ZoomableImageView
            android:id="@+id/zoomable_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="@android:color/black"
            android:clickable="true"
            android:scaleType="matrix" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Buttons"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="bottom|center_horizontal"
                android:onClick="decrease"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/Button03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/between_btn_margin"
                    android:background="@drawable/decrease_button"
                    android:onClick="decrease" />

                <TextView
                    android:id="@+id/decreaseText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/between_btn_margin"
                    android:layout_marginLeft="@dimen/btn_margin"
                    android:layout_marginRight="@dimen/btn_margin"
                    android:background="@color/black"
                    android:text="@string/decreaseBtn"
                    android:textAppearance="?android:attr/textAppearance"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="bottom|center_horizontal"
                android:onClick="removePin"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/Button02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/between_btn_margin"
                    android:background="@drawable/delete_button"
                    android:onClick="removePin" />

                <TextView
                    android:id="@+id/deleteText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/between_btn_margin"
                    android:layout_marginLeft="@dimen/btn_margin"
                    android:layout_marginRight="@dimen/btn_margin"
                    android:background="@color/black"
                    android:text="@string/deleteBtn"
                    android:textAppearance="?android:attr/textAppearance"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="bottom|center_horizontal"
                android:onClick="increase"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/Button01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/between_btn_margin"
                    android:background="@drawable/increase_button"
                    android:onClick="increase" />

                <TextView
                    android:id="@+id/increaseText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/between_btn_margin"
                    android:layout_marginLeft="@dimen/btn_margin"
                    android:layout_marginRight="@dimen/btn_margin"
                    android:background="@color/black"
                    android:text="@string/increaseBtn"
                    android:textAppearance="?android:attr/textAppearance"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/wolfNumberText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/btn_margin"
                    android:layout_marginTop="@dimen/btn_margin"
                    android:background="@color/black"
                    android:text="@string/wolfText"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/dateDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/btn_margin"
                    android:background="@color/black"
                    android:text="@string/defaultDate"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="top|center_horizontal"
                android:onClick="nextImage"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/Button04"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/btn_margin"
                    android:layout_marginRight="@dimen/btn_margin"
                    android:layout_marginTop="@dimen/btn_margin"
                    android:background="@drawable/next_button"
                    android:onClick="nextImage" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/btn_margin"
                    android:layout_marginRight="@dimen/btn_margin"
                    android:background="@color/black"
                    android:onClick="nextImage"
                    android:text="@string/nextBtn"
                    android:textAppearance="?android:attr/textAppearance"
                    android:textColor="@color/white" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>